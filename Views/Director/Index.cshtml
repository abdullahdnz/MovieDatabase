@model IEnumerable<Director>

@{
    ViewData["Title"] = "List of Directors";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">

<h1 style="text-align:center">Director index page</h1>
<hr />

<table class="table table-bordered table-dark">
    <tr>
        <th style="text-align:center">Profile Picture</th>
        <th style="text-align:center">Full Name</th>
        <th style="text-align:center">Biography </th>
        <th style="text-align:center">Actions </th>
    </tr>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">
                    <img class="rounded-right" style="width:300px; height:180px" src="@item.ProfilePictureURL" alt="@item.FullName" />
                </td>
                <td class="align-middle">@item.FullName</td>
                <td class="align-middle">@item.Bio</td>
                <td class="align-middle">
                    <a class="btn btn-primary text-white" asp-action="Edit" asp-route-id="@item.ID"><i class="fa-solid fa-pen-to-square" style="padding:5px"></i>Edit</a>
                    <a class="btn btn-info text-white" asp-action="Details" asp-route-id="@item.ID"><i class="fa-solid fa-circle-info" style="padding:5px"></i>Details</a>
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ID"><i class="fa-solid fa-trash" style="padding:5px"></i>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="position:fixed; right:25px; bottom:25px;" class="text-white">
    <a asp-controller="Director" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-circle-plus"></i>Add new</a>
</div>
